<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Translucent"/>

    <!-- Main Tabbar TextView -->
    <style name="MainTabBarItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/main_bottom_tabbar_drawable_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/main_tabbar_text_color</item>
        <item name="android:textSize">@dimen/main_bottom_tabbar_test_size</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Line_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/personal_row_separator_line_height</item>
        <item name="android:background">@color/darkgray</item>
        <item name="android:layout_marginLeft">@dimen/personal_row_separator_line_margin</item>
        <item name="android:layout_marginRight">@dimen/personal_row_separator_line_margin</item>
    </style>

    <!-- Personal Row -->
    <style name="PersonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/personal_row_height</item>
    </style>

    <style name="PersonRowItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="PersonRowIcon" parent="PersonRowItem">
        <item name="android:layout_marginLeft">@dimen/personal_row_icon_margin_left</item>
    </style>

    <style name="PersonRowText" parent="PersonRowItem">
        <item name="android:layout_marginLeft">@dimen/personal_row_textview_margin_left</item>
    </style>

    <style name="PersonRowRightArrow" parent="PersonRowItem">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/personal_row_arrow_margin_right</item>
        <item name="android:src">@mipmap/one_details_page_arrowhead</item>
    </style>

</resources>
