<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Translucent"/>

    <!-- Main Tabbar TextView -->
    <style name="MainTabBarItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/main_bottom_tabbar_drawable_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/main_tabbar_text_color</item>
        <item name="android:textSize">@dimen/main_bottom_tabbar_test_size</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListViewSeparateLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listview_separate_line_height</item>
        <item name="android:background">@color/darkgray</item>
        <item name="android:layout_marginLeft">@dimen/listview_separate_line_margin</item>
        <item name="android:layout_marginRight">@dimen/listview_separate_line_margin</item>
    </style>

    <!-- Personal Row -->
    <style name="PersonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/personal_row_height</item>
    </style>

    <style name="PersonRowItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="PersonRowIcon" parent="PersonRowItem">
        <item name="android:layout_marginLeft">@dimen/personal_row_icon_margin_left</item>
    </style>

    <style name="PersonRowText" parent="PersonRowItem">
        <item name="android:layout_marginLeft">@dimen/personal_row_textview_margin_left</item>
    </style>

    <style name="PersonRowRightArrow" parent="PersonRowItem">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/personal_row_arrow_margin_right</item>
        <item name="android:src">@mipmap/one_details_page_arrowhead</item>
    </style>

    <!-- Setting -->
    <style name="SettingListViewRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_row_height</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/listview_item_selector</item>
    </style>

    <style name="SettingSectionHeadTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/one_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingListViewSeparateLine" parent="ListViewSeparateLine">
        <!--<item name="android:layout_marginTop">8dp</item>-->
    </style>

    <style name="SettingListViewHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/setting_hint_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingRowRightArrow" parent="PersonRowRightArrow">
    </style>

    <!-- MarketTime TextView -->
    <style name="MarketTimeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">@dimen/market_time_tv_margin</item>
        <item name="android:layout_marginRight">@dimen/market_time_tv_margin</item>
        <item name="android:layout_marginTop">@dimen/market_time_tv_margin</item>
        <item name="android:layout_marginBottom">@dimen/market_time_tv_margin</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/one_text_color</item>
        <item name="android:textSize">@dimen/market_time_tv_text_size</item>
    </style>

    <!-- VOL TextView -->
    <style name="VOLTextView" parent="MarketTimeTextView">
    </style>

    <!-- Home Paint Info TextView -->
    <style name="PaintInfoTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/market_time_tv_margin</item>
        <item name="android:layout_marginRight">@dimen/market_time_tv_margin</item>
        <item name="android:gravity">center|right</item>
        <item name="android:textColor">@color/home_page_author</item>
        <item name="android:textSize">@dimen/paint_info_tv_text_size</item>
    </style>

    <!-- Common Laud LinearLayout -->
    <style name="LaudLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/market_time_tv_margin</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@mipmap/mobile_homepage_laud_bg</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Common Laud Icon ImageView -->
    <style name="LaudImageView">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@mipmap/laud</item>
    </style>

    <!-- Common Laud Number TextView -->
    <style name="LaudNumberTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/home_page_author</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextView.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

</resources>
