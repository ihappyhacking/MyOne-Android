<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Translucent"/>

    <!-- Main Tabbar TextView -->
    <style name="MainTabBarItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/main_bottom_tabbar_drawable_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/main_tabbar_text_color</item>
        <item name="android:textSize">@dimen/main_bottom_tabbar_test_size</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
